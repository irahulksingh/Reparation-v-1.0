@model IEnumerable<HgWorkflow.Models.WorkOrder>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/NewStyle.css" rel="stylesheet" />
<div class="list-page">
    <div class="form">
        <div class="form-horizontal">
            <p class="text-center text-info text-uppercase"><b>
    @Html.ActionLink("Create new work-order", "Create")
</b>
            </p>
            @using (Html.BeginForm())
            {
            <centre>
                <p class="col-lg-12">
                    Search by <b> Contact number/ Work-order no.</b>: @Html.TextBox("SearchString", "", new { @class = "form-control" })
                    <input type="submit" value="Search" class="btn btn-default" style="background-color:#004785;color:#ffffff" />
                </p>
            </centre>
            }
            <table class="table" style="text-align:left;">

                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.WorkOrderId)
                    </th>

                    <th>
                        @Html.Label("Customer Name")
                    </th>
                    <th>
                        @Html.Label("Contact Number")
                    </th>

                    <th>
                        @Html.Label("Status")
                    </th>
                    <th>
                        @Html.Label("Comments")
                    </th>
                    <th>
                        @Html.Label("Activity")
                    </th>
                    <th></th>
                </tr>
                @if (Model == null)
                {
                    <span> No Items found</span>

                }
                else
                {

                    foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkOrderId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerMobileNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comments)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) ||
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                        </td>
                    </tr>
                    }
                }

            </table>
        </div>
            </div>
        </div>
    </div>
</div>
